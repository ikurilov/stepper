    {
      "id": "cardNumber",
      "row": 0,
      "title": "Card number",
      "type": "text",
      "validators": [
        {
          "pattern": "/[0-9 ]*/i"
        }
      ]
    },
    {
      "id": "month",
      "row": 0,
      "title": "Month (MM)",
      "type": "text",
      "validators": [
        {
          "pattern": "/[0-9]{2}/i"
        }
      ]
    },
    {
      "id": "cvcCvv",
      "row": 1,
      "title": "CVC / CVV",
      "type": "text",
      "validators": [
        {
          "pattern": "/[0-9]{3}/i"
        }
      ]
    },
    {
      "id": "year",
      "row": 1,
      "title": "Year (YYYY)",
      "type": "text",
      "validators": [
        {
          "pattern": "/[0-9]{4}/i"
        }
      ]
    }
  ]
}
